<!---
	The default skin class for the AdvancedTabBarButton Close button.  

	@see flame.controls.spark.AdvancedTabBarButton
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:fb="http://ns.adobe.com/flashbuilder/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	alpha.disabled="0.5" minHeight="11" minWidth="11">
    
	<!-- host component -->
	<fx:Metadata>
	    /** 
	     * @copy spark.skins.spark.ApplicationSkin#hostComponent
	     */
	    [HostComponent("spark.components.Button")]
	</fx:Metadata>
	
    <!-- states -->
    <s:states>
		
        <s:State name="up" />
		
        <s:State name="over" />
		
        <s:State name="down" />
		
        <s:State name="disabled" />
		
    </s:states>
	
	<s:BitmapImage source.down="{styleManager.getStyleDeclaration('.tabCloseButton').getStyle('downSkin')}"
		source.over="{styleManager.getStyleDeclaration('.tabCloseButton').getStyle('overSkin')}"
		source.up="{styleManager.getStyleDeclaration('.tabCloseButton').getStyle('upSkin')}" />
    
</s:SparkButtonSkin>